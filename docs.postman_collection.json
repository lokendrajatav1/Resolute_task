{
  "info": {
    "name": "Advanced E-Commerce API",
    "_postman_id": "ecommerce-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman Collection for Advanced E-Commerce API ‚Äî includes Auth, Products, Cart, Orders, and Admin routes."
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "userToken", "value": "" },
    { "key": "adminToken", "value": "" },
    { "key": "productId", "value": "" },
    { "key": "orderId", "value": "" }
  ],
  "item": [
    {
      "name": "1Ô∏è‚É£ AUTH (Public)",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Lokendra User\",\n  \"email\": \"user@example.com\",\n  \"password\": \"Password@123\"\n}"
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Password@123\"\n}"
            }
          }
        },
        {
          "name": "Register Admin",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"Password@123\"\n}"
            }
          }
        },
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Password@123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "2Ô∏è‚É£ PRODUCTS",
      "item": [
        {
          "name": "List Products (Public)",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/products"
          }
        },
        {
          "name": "Get Product by ID (Public)",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/products/{{productId}}"
          }
        },
        {
          "name": "Create Product (Admin Only)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/products",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"iPhone 15\",\n  \"price\": 999,\n  \"description\": \"Apple iPhone 15 128GB\",\n  \"totalStock\": 10\n}"
            }
          }
        },
        {
          "name": "Update Product (Admin Only)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/products/{{productId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 950,\n  \"totalStock\": 20\n}"
            }
          }
        },
        {
          "name": "Delete Product (Admin Only)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "url": "{{baseUrl}}/products/{{productId}}"
          }
        }
      ]
    },
    {
      "name": "3Ô∏è‚É£ CART (User Only)",
      "item": [
        {
          "name": "Add Item to Cart",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/cart/items",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 2\n}"
            }
          }
        },
        {
          "name": "View Cart",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": "{{baseUrl}}/cart"
          }
        },
        {
          "name": "Remove Item from Cart",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": "{{baseUrl}}/cart/items/{{productId}}"
          }
        }
      ]
    },
    {
      "name": "4Ô∏è‚É£ ORDERS (User Only)",
      "item": [
        {
          "name": "Checkout Order",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": "{{baseUrl}}/orders/checkout"
          }
        },
        {
          "name": "Pay Order (Mock)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/orders/{{orderId}}/pay",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mockTransactionId\": \"TXN123456\"\n}"
            }
          }
        },
        {
          "name": "My Orders List",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": "{{baseUrl}}/orders"
          }
        },
        {
          "name": "Single Order Details",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": "{{baseUrl}}/orders/{{orderId}}"
          }
        }
      ]
    },
    {
      "name": "5Ô∏è‚É£ ADMIN (Orders Management)",
      "item": [
        {
          "name": "Get All Orders (Admin)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "url": "{{baseUrl}}/admin/orders"
          }
        },
        {
          "name": "Update Order Status (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/admin/orders/{{orderId}}/status",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"SHIPPED\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "üíö HEALTH CHECK",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/"
      }
    }
  ]
}
